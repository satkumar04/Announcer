<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/ble_background_bg">


    <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:padding="30dp"
            android:src="@drawable/ble_logo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

    <ImageView
            android:id="@+id/start_button"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/start_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />


    <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <LinearLayout
                android:background="@android:color/holo_red_light"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical" >

            <TextView
                    android:id="@+id/locataion_tv"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:layout_marginTop="62dp"
                    app:layout_constraintTop_toBottomOf="@+id/start_button"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Location" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>



    </LinearLayout>



    <ImageView
            app:layout_constraintTop_toBottomOf="@+id/locataion_tv"
            android:id="@+id/settings_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/start_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>